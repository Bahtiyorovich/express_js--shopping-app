<div class="container py-3">
  <header>
    <div
      class="d-flex flex-column flex-md-row align-items-center pb-3 mb-4 border-bottom"
    >
      <a
        href="/"
        class="d-flex align-items-center link-body-emphasis text-decoration-none"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="30"
          height="30"
          fill="currentColor"
          class="bi bi-google-play me-2"
          viewBox="0 0 16 16"
        >
          <path
            d="M14.222 9.374c1.037-.61 1.037-2.137 0-2.748L11.528 5.04 8.32 8l3.207 2.96 2.694-1.586Zm-3.595 2.116L7.583 8.68 1.03 14.73c.201 1.029 1.36 1.61 2.303 1.055l7.294-4.295ZM1 13.396V2.603L6.846 8 1 13.396ZM1.03 1.27l6.553 6.05 3.044-2.81L3.333.215C2.39-.341 1.231.24 1.03 1.27Z"
          />
        </svg>
        <span class="fs-4">DevTutorials | Shop</span>
      </a>

      <nav class="d-inline-flex mt-2 mt-md-0 ms-md-auto">
        {{#if isProducts}}
          <a class="me-3 py-2 link-body-emphasis" href="/products">Products</a>
        {{else}}
          <a
            class="me-3 py-2 link-body-emphasis text-decoration-none"
            href="/products"
          >Products</a>
        {{/if}}
        {{! <a class="me-3 py-2 link-body-emphasis text-decoration-none" href="#">Add</a> }}
        <div
          class="btn-group"
          role="group"
          aria-label="Basic mixed styles example"
        >
          {{#if isAdd}}
            <button type="button" class="btn btn-warning">
              <a
                class="me-3 py-2 link-body-emphasis text-decoration-none text-dark"
                href="/add"
              >
                Add
              </a>
            </button>
          {{else}}
            <button type="button" class="btn btn-outline-warning">
              <a
                class="me-3 py-2 link-body-emphasis text-decoration-none"
                href="/add"
              >
                Add
              </a>
            </button>
          {{/if}}
          {{#if token}}
              <button type="button" class="btn btn-danger">
                <a
                  class="me-3 py-2 link-body-emphasis text-decoration-none text-white"
                  href="/logout"
                >
                  Log Out
                </a>
              </button>
          {{else}}
            {{#if isLogin}}
              <button type="button" class="btn btn-primary">
                <a
                  class="me-3 py-2 link-body-emphasis text-decoration-none text-white"
                  href="/login"
                >
                  Login
                </a>
              </button>
            {{else}}
              <button type="button" class="btn btn-outline-primary">
                <a
                  class="me-3 py-2 link-body-emphasis text-decoration-none"
                  href="/login"
                >
                  Login
                </a>
              </button>
            {{/if}}

            {{#if isRegister}}
              <button type="button" class="btn btn-primary">
                <a
                  class="me-3 py-2 link-body-emphasis text-decoration-none text-white"
                  href="/register"
                >
                  Register
                </a>
              </button>
            {{else}}
              <button type="button" class="btn btn-outline-primary">
                <a
                  class="me-3 py-2 link-body-emphasis text-decoration-none"
                  href="/register"
                >
                  Register
                </a>
              </button>
            {{/if}}
          {{/if}}

        </div>
      </nav>
    </div>
  </header>
</div>