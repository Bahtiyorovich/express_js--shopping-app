<div class="row mb-2">
    <div class="col-md">
      <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col p-4 d-flex flex-column position-static">
          <strong class="d-inline-block mb-2 text-primary bg-light rounded p-1">Programming Tutorials</strong>
          <h3 class="mb-2 bg-light rounded p-1">{{product.title}}</h3>
          <div class="mb-3 text-body-secondary bg-light rounded p-1">created date: {{formatDate product.createdAt}}</div>
          <p class="card-text mb-3 bg-light rounded p-1">{{product.description}}</p>
          <p class="card-text mb-2 bg-light rounded p-1">Author: {{product.user.firstName}} {{product.user.lastName}}</p>
          <p class="card-text mb-2 bg-light rounded p-1">Course price: {{product.price}}.00$</p>
        </div>
        <div class="col-3 w-50 d-none d-lg-block ">
          <img src="{{product.image}}" alt="product-image" class="w-100 h-100"/>
        </div>
      </div>
    </div>
</div>