{{#if myProducts.length}}
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
       {{#each myProducts}}
        <div class="col">
          <div class="card shadow-sm">
            <img src={{image}} alt="card-image" class="rounded"/>
            <div class="card-body">
                <h3>{{title}}</h3>
                <p class="card-text">{{description}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="avatar">
                    <span class="fw-bold text-white">{{getFullNameFirstCharacter user.firstName user.lastName }}</span>
                </div>
                <span class="text-body-secondary fs-5">{{price}}.00$</span>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
    </div>
{{else}}
    <p>No Product</p>
{{/if}}



